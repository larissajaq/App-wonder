<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".First">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/first_back"
            android:id="@+id/image_back_first" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Uma nova experiência na hora de ler uma história."
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_first" android:textStyle="bold"
            android:textSize="28sp" app:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/background_light" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/image_back_first" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.647"
            android:gravity="center"/>
    <Button
            android:text="Vamos lá"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="573dp"
            tools:layout_editor_absoluteX="133dp" android:id="@+id/button_first" android:textSize="24sp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:background="@drawable/roundedbutton"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" android:onClick="ClickFirst"/>
</android.support.constraint.ConstraintLayout>